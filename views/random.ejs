<%- include("partials/header", {title: "Random Proverb"})%>
<h1>Detailed Random Proverb</h1>

<div class="row row-cols-1 row-cols-md-2 g-4">
  <div class="col mb-5">
    <div class="card h-100">
      <div class="card-body">
        <p class="card-text">
          <strong>Proverb in Dari: </strong><%= random.textDari %>
        </p>
        <p class="card-text">
          <strong>Proverb in Pashtoo: </strong><%= random.textPashto %>
        </p>
        <p class="card-text">
          <strong>English Translation: </strong><%= random.translationEn %>
        </p>
        <p class="card-text"><strong>Meaning: </strong><%= random.meaning %></p>
        <p class="card-text">
          <strong>Category: </strong><%= random.category %>
        </p>
      </div>
      <div class="card-footer d-flex justify-content-between mt-4">
        <a href="/random" class="btn btn-success mb-3"
          >Get Another Random Proverb</a
        >
        <a href="/" class="btn btn-secondary mb-3">Cancel</a>
      </div>
    </div>
  </div>
</div>
<%- include("partials/footer") %>
